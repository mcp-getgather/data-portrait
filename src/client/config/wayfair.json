{
  "brand_id": "wayfair",
  "brand_name": "Wayfair",
  "logo_url": "https://upload.wikimedia.org/wikipedia/commons/0/0a/Wayfair_logo_with_tagline.png",
  "is_mandatory": false,
  "is_dpage": true,
  "dataTransform": {
    "dataPath": "data.orderProductPagesByCustomer.nodes",
    "fieldMappings": [
      {
        "outputKey": "brand",
        "sourcePath": "brand",
        "defaultValue": "Wayfair"
      },
      {
        "outputKey": "order_id",
        "sourcePath": "order_id",
        "defaultValue": "N/A"
      },
      {
        "outputKey": "order_date",
        "sourcePath": "order_date_and_store",
        "defaultValue": "N/A",
        "transform": "date"
      },
      {
        "outputKey": "order_total",
        "sourcePath": "total_price",
        "transform": "currency",
        "formatTemplate": "{symbol}{amount}",
        "defaultValue": "$0.00"
      },
      {
        "outputKey": "product_names",
        "sourcePath": "product_names",
        "defaultValue": "Unknown Product",
        "convertToArray": true
      },
      {
        "outputKey": "image_urls",
        "sourcePath": "image_urls",
        "defaultValue": "",
        "convertToArray": true
      }
    ]
  },
  "schema": [
    {
      "name": "email",
      "type": "email",
      "prompt": "Email"
    },
    {
      "name": "submit",
      "type": "click",
      "prompt": "Sign In with OTP",
      "dependsOnFields": "email"
    },
    {
      "name": "password_choice,submit,sign_in_with_password",
      "type": "click",
      "prompt": "Sign in with Password",
      "dependsOnFields": "email"
    }
  ]
}
